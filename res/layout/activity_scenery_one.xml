<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.guide.UI.SceneryOneActivity" >

    <ImageView
        android:id="@+id/scenery_one_pic"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:padding="5dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_no_img" >
    </ImageView>

    <LinearLayout
        android:id="@+id/scenery_one_name_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="5dp"
        android:layout_weight="0.5"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/scenery_one_name_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="名字：" >
        </TextView>

        <TextView
            android:id="@+id/scenery_one_name_content"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" >
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/scenery_one_introduce_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="5dp"
        android:layout_weight="0.5"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/scenery_one_introduce_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="简介：" >
        </TextView>

        <TextView
            android:id="@+id/scenery_one_introduce_content"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" >
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/scenery_one_location_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="5dp"
        android:layout_weight="0.5"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/scenery_one_location_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="票价：" >
        </TextView>

        <TextView
            android:id="@+id/scenery_one_location_content"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" >
        </TextView>
    </LinearLayout>

    <Button
        android:id="@+id/main_sure_btn"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:text="点击进入" />

</LinearLayout>