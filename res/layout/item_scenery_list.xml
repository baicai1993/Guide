<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/item_scenery_list_pic_iv"
        android:layout_width="0dp"
        android:layout_height="@dimen/item_scenery_list_pic_height"
        android:layout_marginBottom="@dimen/item_scenery_list_pic_margin_top_bottom"
        android:layout_marginLeft="@dimen/item_scenery_list_pic_margin_top_bottom"
        android:layout_marginTop="@dimen/item_scenery_list_pic_margin_top_bottom"
        android:layout_weight="1"
        android:scaleType="fitXY"
        android:src="@drawable/ic_no_img" >
    </ImageView>

    <TextView
        android:id="@+id/item_scenery_list_title_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="2"
        android:paddingLeft="20dp" >
    </TextView>

</LinearLayout>